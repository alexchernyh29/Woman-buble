.bubles
    position relative
    width 100%
    height 100vh
    overflow hidden
    padding w(90) w(40)
    +below(800px)
        padding wm(30) wm(13)
        height 100%

    &__wrap
        display flex
        flex-direction row
        justify-content space-between
        margin-bottom w(125)
        &:last-child
            margin-bottom w(0)
        +below(800px)
            flex-wrap wrap
            margin-bottom wm(15)

    &__img
        position absolute
        img
            width 100%
        &.one
            left w(446)
            top w(73)
        &.two
            right w(456)
            top w(295)
        &.three
            right w(20)
            top w(73)
        &.four
            right w(503)
            bottom w(315)
        &.five
            left w(396)
            bottom w(87)
        &.six
            left w(860)
            top w(467)

    &__buble
        width 22%
        height w(277)
        border-radius w(100)
        display flex
        flex-direction column
        justify-content center
        opacity 0.83
        transition-duration 1.5s
        &:hover
            transform scale(1.1)
            transition-duration 1.5s
            opacity 1
        +below(800px)
            width 45%
            height wm(226)
            border-radius wm(100)
            margin-bottom wm(15)

    &__buble__title
        color $c-black
        font-family $ff-Roboto
        font-size w(30)
        font-weight 700
        line-height w(35)
        text-align center
        text-transform uppercase
        opacity 1
        +below(800px)
            font-size wm(30)
            line-height wm(35)

    &__buble__text
        margin-top w(17)
        color $c-black
        font-family $ff-Roboto
        font-size w(30)
        font-weight 700
        line-height w(35)
        text-align center
        text-transform uppercase
        opacity 1
        span
            font-weight 400
        +below(800px)
            margin-top wm(17)
            font-size wm(30)
            line-height wm(35)

.pink {
    box-shadow inset 47px -26px 47.8px 1px rgb(236, 221, 218),inset 17px -14px 17.1px -4px rgb(251, 244, 241);
    background rgb(250, 248, 249)
}
.blue {
    box-shadow inset 35px -39px 47.8px 4px rgb(124, 209, 220),inset 4px -25px 43px 0px rgb(255, 255, 255)
    background rgb(250, 248, 249)
}
.selected {
    box-shadow: inset 47px -26px 47.8px 1px rgb(175, 255, 118),inset 17px -14px 17.1px -4px rgb(161, 178, 149);
}